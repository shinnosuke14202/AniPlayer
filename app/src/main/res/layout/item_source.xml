<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:gravity="start|center"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/ivSource"
        android:layout_width="@dimen/source_image_size"
        android:layout_height="@dimen/source_image_size"
        android:contentDescription="@string/site_logo"
        tools:src="@drawable/baseline_android_24"/>

    <Space
        android:layout_width="@dimen/space_gap"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        tools:text="WeebCentral" />

</LinearLayout>
