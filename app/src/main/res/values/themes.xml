<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AniPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Theme.AniPlayer" parent="Base.Theme.AniPlayer">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!--        <item name="android:windowBackground">@drawable/background_main</item>-->

        <!-- Buttons, Highlights -->
        <item name="colorSecondaryContainer">@color/colorPrimaryVariant</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOutline">@color/colorHighlight</item>

        <!-- Default text color on primary -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Other Material attributes -->
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Optional for M3 -->
        <item name="colorSurfaceVariant">@color/colorCard</item>
        <item name="colorTertiary">@color/colorInfo</item>
        <item name="colorTertiaryContainer">@color/colorNeutral</item>

        <!-- Status bar + nav bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>
