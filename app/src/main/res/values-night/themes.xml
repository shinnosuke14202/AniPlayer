<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AniPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Dark Theme -->
    <style name="Theme.AniPlayer" parent="Base.Theme.AniPlayer">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Buttons, Highlights -->
        <item name="colorSecondaryContainer">@color/colorButton</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOutline">@color/colorHighlight</item>

        <!-- Text on Primary -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Optional text + surface variants -->
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Extra Material 3 colors -->
        <item name="colorSurfaceVariant">@color/colorCard</item>
        <item name="colorTertiary">@color/colorInfo</item>
        <item name="colorTertiaryContainer">@color/colorNeutral</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>
</resources>
